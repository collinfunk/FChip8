root = true

# For every file
[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4
max_line_length = 120

# PEP8 specification
[*.py]
indent_style = space
indent_size = 4
max_line_length = 79

# Makefiles
[{Makefile,makefile,*.mk}]
indent_style = tab
indent_size = 4

# C/C++
[*.c,*.h]
indent_style = space
indent_size = 4
max_line_length = 79
insert_final_newline = true
trim_trailing_whitespace = true
